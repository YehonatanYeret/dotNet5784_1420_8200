<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/mainWindow.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        
        <Grid Width="300" Height="350" VerticalAlignment="Stretch" HorizontalAlignment="Right" Background="#CED0C1">
            <Border BorderBrush="Black" BorderThickness="2"></Border>
            <Grid Width="280" Height="150" Panel.ZIndex="1" VerticalAlignment="Bottom">
                <Button Content="Handle Engineers" Click="EngineerList_click"  Height="75" Width="130" HorizontalAlignment="Left"/>
                <Button Content="Initialize DataBase" Click="Initialization_click" Height="75" Width="130" HorizontalAlignment="Right"/>
            </Grid>
            <TextBlock Panel.ZIndex="12" Height="100" FontFamily="Impact" FontSize="28" FontWeight="Bold" FontStyle="Italic" Margin="255,59,304,275" ><Run Text="Project "/><LineBreak/><Run Text="   Managment"/></TextBlock>
        </Grid>
    </Grid>
</Window>
