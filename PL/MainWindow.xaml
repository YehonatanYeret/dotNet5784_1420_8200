<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/mainWindow.jpg" Opacity="0.3" />
        </Grid.Background>

        <Grid Height="350" Width="300" HorizontalAlignment="Left" VerticalAlignment="Center" Background="#A9A57C">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button Margin="20, 0" Grid.Row="1" Content="Handle Engineers" HorizontalAlignment="Left" Click="EngineerList_click" Height="75" Width="100"/>
            <Button Margin="20, 0" Grid.Row="1" Content="Initialize DataBase" HorizontalAlignment="Right"  Click="Initialization_click" Height="75" Width="100"/>
            <TextBlock HorizontalAlignment="Center" Grid.Row="0" Height="100" FontFamily="Vladimir Script" FontSize="28" FontWeight="Bold" FontStyle="Italic" ><Run Text="Projects"/><LineBreak/><Run Text="    Managment"/><LineBreak/><Run/></TextBlock>
        </Grid>
    </Grid>
</Window>
