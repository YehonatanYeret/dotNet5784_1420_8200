<Window x:Class="PL.Messeges.EnterIdMessege"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Messeges"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="EnterIdMessege" Height="150" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Enter engineer Id to show:" Grid.Row="0" TextAlignment="Center" VerticalAlignment="Center" FontFamily="Cambria Math" FontSize="13" HorizontalAlignment="Center"/>
        <TextBox Text="{Binding AnswerId}" Grid.Row="1" Background="{x:Null}" TextAlignment="Center" VerticalAlignment="Center" Width="180" Height="23" />
        <Button Content="OK" IsDefault="True" Click="OKButton_Click" Grid.Row="2" Width="150" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>

</Window>
