<Window x:Class="PL.Task.TaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Task"
        xmlns:control="clr-namespace:PL"
        mc:Ignorable="d"
        Title="TaskWindow" Height="550" Width="700"
        ResizeMode="NoResize"
        DataContext="{Binding CurrentTask, RelativeSource={RelativeSource Mode=Self}, Mode=TwoWay}">

    <!-- Main Grid -->
    <Grid >

        <!-- Set the background gradient -->
        <Grid.Background>
            <LinearGradientBrush>
                <GradientStop Color="#bec4c2" Offset="0" />
                <GradientStop Color="#e1e6e4" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Define Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <!-- Sub-Grid for Engineer Details -->
        <Grid Grid.Row="0" Margin="20, 20">

            <!-- Define Columns -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="20, 0">
                <!-- Define Rows -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <!--<RowDefinition Height="*"/>-->
                </Grid.RowDefinitions>

                <!-- Define Columns -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <!-- Engineer ID -->
                <Label Content="Task number:" HorizontalAlignment="Left" Grid.Row="0" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Id, Mode=TwoWay, NotifyOnValidationError=True}" IsEnabled="{Binding Id, Mode=OneTime, Converter={StaticResource ConvertIdToBooleanKey}}"  Margin="2,7"/>

                <!-- Engineer Name -->
                <Label Content="Alias:" HorizontalAlignment="Left" Grid.Row="1" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Alias, Mode=TwoWay, NotifyOnValidationError=True}" Margin="2,7"/>

                <!-- Engineer Email -->
                <Label Content="Description:" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Description, Mode=TwoWay, NotifyOnValidationError=True}" Margin="2,7"/>

                <!-- Engineer Email -->
                <Label Content="Deliverables:" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding Deliverables, Mode=TwoWay, NotifyOnValidationError=True}" Margin="2,7"/>

                <!-- Engineer Email -->
                <Label Content="Remarks:" HorizontalAlignment="Left" Grid.Row="4" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding Remarks, Mode=TwoWay, NotifyOnValidationError=True}" Margin="2,7"/>

                <!-- Engineer Level -->
                <Label Content="Complexity:" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="5" Grid.Column="1" ItemsSource="{Binding Source={StaticResource EngineerCollectionKey}}" 
                SelectedValue="{Binding Complexity, Mode=TwoWay, NotifyOnValidationError=true, 
                ValidatesOnExceptions=true}" Margin="2,7" Foreground="AliceBlue"/>

                <Label Content="Status:" HorizontalAlignment="Left" Grid.Row="6" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="6" Grid.Column="1" ItemsSource="{Binding Source={StaticResource TaskCollectionKey}}" 
                SelectedValue="{Binding Status, Mode=TwoWay, NotifyOnValidationError=true, 
                ValidatesOnExceptions=true}" Margin="2,7" Foreground="AliceBlue"/>

                <!-- Engineer Email -->
                <Label Content="Engineer:" HorizontalAlignment="Left" Grid.Row="7" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Row="7" Grid.Column="1" FontSize="13" Content="{Binding Engineer, Mode=TwoWay, Converter= {StaticResource ConvertEngineerToEngineerNameKey}}" Margin="2,7" Click="EngeineerInTaskButton_Click"/>

            </Grid>

            <Border Grid.Column="1" VerticalAlignment="Stretch" Width="3" Background="Black" />

            <Grid Grid.Column="2" Margin="20, 0">
                <!--<ListView DataContext="{Binding Dependencies}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Task" Width="100" DisplayMemberBinding="{Binding TaskId}"/>
                            <GridViewColumn Header="Description" Width="200" DisplayMemberBinding="{Binding Description}"/>
                            <GridViewColumn Header="Status" Width="100" DisplayMemberBinding="{Binding Status}"/>
                        </GridView>
                    </ListView.View>
                    <ListViewItem>
                        <Grid>
                            <TextBox Text="{Binding Id, Mode=TwoWay, NotifyOnValidationError=True}" Margin="2,7"/>
                            <TextBox Text="{Binding Description, Mode=TwoWay, NotifyOnValidationError=True}" Margin="2,7"/>
                            <TextBox Text="{Binding Status, Mode=TwoWay, NotifyOnValidationError=True}" Margin="2,7"/>
                        </Grid>
                    </ListViewItem>
                </ListView>-->
                <ListView Grid.Row="1" ItemsSource="{Binding Dependencies}">
                    <ListView.View>
                        <GridView >
                            <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}" >
                                <GridViewColumn.CellTemplate >
                                    <DataTemplate>
                                        <TextBlock TextWrapping="Wrap" Text="{Binding Id}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Alias" DisplayMemberBinding="{Binding Alias}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock TextWrapping="Wrap" Text="{Binding Alias}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock TextWrapping="Wrap" Text="{Binding Description}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>

                            <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock TextWrapping="Wrap" Text="{Binding Status}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>

                </ListView>

            </Grid>

        </Grid>

        <!-- Button for Adding or Updating Engineer -->
        <Button Content="{Binding Id, Mode=OneTime, Converter={StaticResource ConverIdToContentKey}}" Height="30" Grid.RowSpan="2" VerticalAlignment="Bottom" Click="BtnAddUpdate_Click" Margin="30 ,10"/>
    </Grid>
</Window>


