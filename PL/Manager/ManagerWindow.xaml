<Window x:Class="PL.Manager.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Manager"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="{DynamicResource backgroundImage}"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}"
        Title="ManagerWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Margin="40">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Gant" Grid.Column="0" Margin="30" Height="40" Click="GanttClick_Button"
                        Visibility="{Binding IsprojectStarted, Converter={StaticResource ConvertHiddenToVissibleKey}, Mode=OneWay}"/>
                <Button Content="Start Project" Grid.Column="0" Margin="30" Height="40" Click="StartProject_Click"
                        Visibility="{Binding IsprojectStarted}"/>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="1" Margin="40">

                <Button Content="Reset data" Grid.Column="0"  Height="40" Width="150" Click="ResetDataBtn_Click" HorizontalAlignment="Right"/>
                <Button Content="Initialize data" Grid.Column="0" Height="40" Width="150"  HorizontalAlignment="Left" Click="InitializeDataBtn_Click"/>
                <ProgressBar  Height="20"  VerticalAlignment="Top" 
                        Visibility="{Binding IsprojectStarted, Converter={StaticResource ConvertHiddenToVissibleKey}}" 
                              Value="{Binding percentComplete}" Maximum="100" Minimum="0"
                              BorderBrush="DeepSkyBlue" BorderThickness="1">
                    <!--<ProgressBar.Foreground>
                        <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                            <GradientStop Color="#FF50DF3E" Offset="1"/>
                            <GradientStop Color="#FFFB1B1B" Offset="0"/>
                        </LinearGradientBrush>
                    </ProgressBar.Foreground>-->
                </ProgressBar>

            </Grid>

            <Grid Grid.Row="1" Grid.Column="1" Margin="40">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Tasks" Grid.Column="0" Margin="30" Height="40" Click="TaskButton_Click"/>
                <Button Content="Engineers" Grid.Column="1" Margin="30" Height="40" Click="EngineerButton_Click"/>

            </Grid>

        </Grid>

    </Grid>
</Window>
